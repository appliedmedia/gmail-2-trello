{
  "name": "gmail-2-trello",
  "version": "3.1.0.001",
  "description": "Gmail+Trello integration. Extension for Chrome browser and other developments.",
  "main": "chrome_manifest_v3/app.js",
  "scripts": {
    "dev": "echo 'ðŸš€ Development Setup: 1) Open chrome://extensions/ 2) Enable Developer mode 3) Load unpacked: chrome_manifest_v3/ 4) Go to Gmail to test'",
    "build": "npm run lint:fix && npm run format && npm audit --audit-level=moderate && cd chrome_manifest_v3 && zip -r ../gmail-2-trello-$(node -p \"require('./manifest.json').version\").zip .",
    "test": "jest",
    "lint": "eslint chrome_manifest_v3/**/*.js",
    "lint:fix": "eslint chrome_manifest_v3/**/*.js --fix",
    "format": "prettier --write chrome_manifest_v3/**/*.js",
    "format:check": "prettier --check chrome_manifest_v3/**/*.js",
    "check": "npm run lint && npm run format:check",
    "clean": "rm -rf node_modules package-lock.json",
    "install-deps": "npm install"
  },
  "keywords": [
    "chrome-extension",
    "gmail",
    "trello",
    "integration",
    "productivity"
  ],
  "author": "Andrew Coven <acoven>",
  "contributors": [
    "KS-CleverCopter",
    "Original Author (https://github.com/tungbi)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/appliedmedia/gmail-2-trello.git"
  },
  "bugs": {
    "url": "https://github.com/appliedmedia/gmail-2-trello/issues"
  },
  "homepage": "https://g2t.support",
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jquery": "^3.7.1",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": false,
    "silent": false,
    "testMatch": [
      "**/tests/test_class_model.js",
      "**/tests/test_class_utils.js",
      "**/tests/test_class_app.js",
      "**/tests/test_class_trel.js",
      "**/tests/test_class_gmailView.js",
      "**/tests/test_class_goog.js",
      "**/tests/test_class_popupView.js",
      "**/tests/test_class_popupForm.js",
      "**/tests/test_class_eventTarget.js",
      "**/tests/test_class_waitCounter.js",
      "**/tests/test_class_implementation.js",
      "**/tests/test_class_load_source_file.js",
      "**/tests/test_class_menuControl.js"
    ],
    "setupFilesAfterEnv": [],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/Î©_archives_ignore/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/Î©_archives_ignore/"
    ]
  },
  "dependencies": {
    "jquery": "^3.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "js-yaml": ">=4.1.1",
    "glob": ">=10.5.0",
    "inflight": "npm:lru-cache@^11.0.0"
  }
}
